{
  "name": "crane-hmi-local",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev:web": "npm run dev --workspace apps/web",
    "dev:api": "npm run start:dev --workspace apps/api",
    "start": "npm run start --workspace apps/api",
    "lint": "npm run lint --workspaces"
  },
  "devDependencies": {
    "typescript": "^5.6.3"
  }
}
